@model IEnumerable<SpartaConnect_API.Models.Consultant>

@{
    ViewData["Title"] = "Index";
}

<h1>Consultants</h1>
@using (Html.BeginForm("Index", "Consultants", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input type="submit" value="Search" />
}





<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        padding: 20px 16px;
        margin: 4vh 0 0 3vw;
        width: 90vw;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.7);
    }

    .container {
        padding: 20px 16px;
        margin-left: 20px;
    }
    .container2{
        font-size:1.3em;
    }

    .content-main{
        list-style-type: none;      
    }
    .content-item{
        font-size: 1.3em;
        margin-bottom: 1.2vh;
        margin-top : 2.4vh;
        margin-right:30vw;
    }


    .images{
        transform : rotate(90deg);
        object-fit:scale-down;
        width:12vw;
        height:15vh; 
        margin-top:3vh;
        margin-left:3vw;
    }
    .header1{
        margin-left:5vw;
    }
    .header2{
        margin-right: 68.5vw;
        float: right;
        margin-top: -40vh;
    }

    .bio-content{
        margin-left: 18vw;
        margin-right:40vw;
        float: right;
        margin-top:-37vh;
    }
    .title{
        font-weight:bold;
    }
    .div3{
        margin-left:60vw;
        display:inline-block;
    }
    
   


   

    
</style>




        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Match To Any Documents
                </td>

            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                string imagePath = $"img/{item.FirstName}_{item.LastName}.jpg"; 
                
                
                <div class="card">


                    <div class="div1">

                        <h4 class="header1">
                            <b>
                                @Html.DisplayFor(modelItem => item.FirstName)
                                @Html.DisplayFor(modelItem => item.LastName)
                            </b>
                        </h4>
                        
                        <img class="images" src=@imagePath alt="4" />

                        <div class="container">
                            <ul class="content-main">
                                
                                <li class="content-item">
                                    <span class="title">University:</span> @Html.DisplayFor(modelItem => item.University)
                                </li>
                                <li class="content-item">
                                    <span class="title">Degree:</span> @Html.DisplayFor(modelItem => item.Degree)
                                </li>
                                <li class="content-item">
                                    <span class="title">Grade:</span> @Html.DisplayFor(modelItem => item.Grade)
                                </li>
                                <a href="@Html.DisplayFor(modelItem => item.CvLink) + &download=1">
                                    <li class="content-item">CV Download</li>
                                </a>

                            </ul>
                        </div>


                        <div class="div2">

                            <h4 class="header2">
                                <b>
                                    Bio
                                </b>
                            </h4>

                            <div class="container2">
                                <p class="bio-content">@Html.DisplayFor(modelItem => item.Bio)</p>
                            </div>

                        </div>
                        <div class="div3">
                            <iframe width="560" height="315" src="https://www.youtube.com/embed/y881t8ilMyc" frameborder="0" allowfullscreen></iframe>
                        </div>


                    </div>



                    

                     
                
                   



                    


                    
                </div>
            }
        }

    

